<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.indranil.adviewtask.view.activity.MainActivity">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:scrollbars="horizontal"
        tools:listitem="@layout/item_header_list"
        android:id="@+id/recyclerViewList">

    </android.support.v7.widget.RecyclerView>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerViewGrid"
        app:layoutManager="GridLayoutManager"
        android:scrollbars="vertical"
        tools:listitem="@layout/item_grid_list"
        android:layout_below="@+id/recyclerViewList"
        android:layout_marginTop="10dp">

    </android.support.v7.widget.RecyclerView>


</RelativeLayout>
